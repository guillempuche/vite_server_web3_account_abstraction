{
	"compilerOptions": {
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable",
			"WebWorker" // For environment variables https://vitejs.dev/guide/env-and-mode.html#env-variables-and-modes
		],
		// "jsx": "react-jsx",
		"jsx": "preserve",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": false,
		"noEmit": true, // Vite takes care of building everything, not tsc
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": [
			"vite/client"
		]
	},
	"files": [],
	"include": [
		"vite.config.mts"
	],
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.spec.json"
		}
	],
	"extends": "../../tsconfig.base.json"
}